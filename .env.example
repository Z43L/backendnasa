# Variables de entorno para el backend de IA s√≠smica
# Copiar este archivo como .env y configurar los valores apropiados

# Base de datos
DB_HOST=localhost
DB_PORT=5432
DB_NAME=deformacion_monitor
DB_USER=postgres
DB_PASSWORD=seismic2024

# NASA ASF (Alaska Satellite Facility)
ASF_USERNAME=tu_usuario_asf
ASF_PASSWORD=tu_password_asf

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# GPU Configuration (opcional)
CUDA_VISIBLE_DEVICES=0
TF_FORCE_GPU_ALLOW_GROWTH=true

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/backend.log

# Cache
REDIS_HOST=localhost
REDIS_PORT=6379
CACHE_TTL=3600

# Monitoring
PROMETHEUS_PORT=9090

# Security (generar tokens seguros)
API_SECRET_KEY=tu_clave_secreta_muy_segura_aqui
JWT_SECRET_KEY=tu_jwt_secret_muy_seguro

# Email notifications (opcional)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=tu_email@gmail.com
SMTP_PASSWORD=tu_app_password
EMAIL_FROM=alertas@seismic-ai.com

# Slack notifications (opcional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR_SLACK_WEBHOOK_URL

# AWS S3 (opcional, para almacenamiento de modelos)
AWS_ACCESS_KEY_ID=tu_access_key
AWS_SECRET_ACCESS_KEY=tu_secret_key
AWS_DEFAULT_REGION=us-east-1
S3_BUCKET=seismic-ai-models

# Docker
COMPOSE_PROJECT_NAME=seismic-ai
DOCKER_BUILDKIT=1

# Development
DEBUG=false
RELOAD=true